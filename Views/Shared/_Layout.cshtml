<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - projetoRedeSocial</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    *@
    <link rel="stylesheet" href="~/css/mycsstheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="column p-0">

    <div class="container-fluid p-0 m-0">
        <div class="text-white bg-primary">
            <ul class="nav nav-pills p-2">
                <li class="nav-item ms-1">
                    <a class="text-white text-decoration-none">
                        <h1 class="fs-1 ms-1">Rede</h1>
                    </a>
                </li>
                <li class="nav-item ms-auto">
                    <a asp-controller="Posts" asp-action="HomePost" class="nav-link text-white">
                        <span class="fs-4 ms-1 d-sm-inline">Home</span>
                    </a>
                </li>
                <li class="nav-item ms-1">
                    @{
                        @inject IHttpContextAccessor httpContextAccessor

                        // Recuperar o cookie (por exemplo, em _Layout.cshtml)
                        var userIdCookie = httpContextAccessor.HttpContext.Request.Cookies["UserId"];

                        <a asp-controller="Usuario" asp-action="DetailsUser" asp-route-id="@userIdCookie" class="nav-link text-white">
                            <span class="fs-4 ms-1 d-sm-inline">Perfil</span>
                        </a>
                    }
                </li>
                <li class="nav-item ms-1">
                    <a asp-controller="Posts" asp-action="Create" class="nav-link text-white">
                        <span class="fs-4 ms-1 d-sm-inline">Criar post</span>
                    </a>
                </li>
                <li class="nav-item ms-auto">
                    <a asp-action="Login" asp-controller="Usuario" class="nav-link text-white">
                        <span class="fs-4 ms-1 d-sm-inline">Sair</span>
                    </a>
                </li>

            </ul>
        </div>

        <div class="">
            <div role="main" class="col text-white d-flex justify-content-center align-items-center">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



