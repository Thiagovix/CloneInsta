@model projetoRedeSocial.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-4">
    <h1 class="text-dark">Edição do Post</h1>
    <hr />
    <div class="row justify-content-center text-dark">
        <div class="col-md-8">
            <div class="border rounded p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="postId" />
                    <input type="hidden" asp-for="usuarioId" />

                    <div class="form-group mb-3">
                        <label asp-for="postTitulo" class="form-label">Título do Post</label>
                        <input asp-for="postTitulo" class="form-control" />
                        <span asp-validation-for="postTitulo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="postDesc" class="form-label">Descrição</label>
                        <textarea asp-for="postDesc" class="form-control"></textarea>
                        <span asp-validation-for="postDesc" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="postArquivo" class="form-label">Arquivo</label>
                        <input asp-for="postArquivo" class="form-control" />
                        <span asp-validation-for="postArquivo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="postDate" class="form-label">Data</label>
                        <input asp-for="postDate" class="form-control" type="date" />
                        <span asp-validation-for="postDate" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Status do Post</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input asp-for="postStatus" class="form-check-input" type="radio" value="0" id="privado" required>
                                <label class="form-check-label" for="privado">Privado</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="postStatus" class="form-check-input" type="radio" value="1" id="publico">
                                <label class="form-check-label" for="publico">Público</label>
                            </div>
                        </div>
                        <span asp-validation-for="postStatus" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <input type="submit" value="Save" class="btn btn-primary mt-2" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



