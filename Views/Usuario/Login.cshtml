@model Usuario

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>

<div class="login-page">
    <div class="login-container">
        <form asp-controller="Usuario" asp-action="Entrar" method="post" class="login-form">
            <h3>Login</h3>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="usuarioEmail" type="email" class="form-control" placeholder="Email">
                <span asp-validation-for="usuarioEmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input asp-for="usuarioSenha" type="password" class="form-control" placeholder="Senha">
                <span asp-validation-for="usuarioSenha" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
            <div class="mt-3">
                <span style="color: black">Não tem conta? <a asp-controller="Usuario" asp-action="Cadastro" class="text-info">Cadastre-se</a></span>
            </div>
        </form>
    </div>
</div>







