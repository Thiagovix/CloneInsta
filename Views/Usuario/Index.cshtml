@model IEnumerable<projetoRedeSocial.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Usuários</h1>

    <div class="d-flex justify-content-between mb-3">
        <h2 class="h5">Lista de Usuários</h2>
        <a asp-action="Create" class="btn btn-primary">Criar Novo Usuário</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.usuarioImagem)</th>
                    <th>@Html.DisplayNameFor(model => model.usuarioDesc)</th>
                    <th>@Html.DisplayNameFor(model => model.usuarioNome)</th>
                    <th>@Html.DisplayNameFor(model => model.usuarioTelefone)</th>
                    <th>@Html.DisplayNameFor(model => model.usuarioEmail)</th>
                    <th>@Html.DisplayNameFor(model => model.usuarioSenha)</th>
                    <th>@Html.DisplayNameFor(model => model.usuarioEndereco)</th>
                    <th>@Html.DisplayNameFor(model => model.usuarioCPF)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.usuarioImagem))
                            {
                                <img src="@Url.Content(item.usuarioImagem)" class="img-fluid rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                            }
                            else
                            {
                                <i class="bi bi-person-circle fs-3"></i>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.usuarioDesc)</td>
                        <td>@Html.DisplayFor(modelItem => item.usuarioNome)</td>
                        <td>@Html.DisplayFor(modelItem => item.usuarioTelefone)</td>
                        <td>@Html.DisplayFor(modelItem => item.usuarioEmail)</td>
                        <td>@Html.DisplayFor(modelItem => item.usuarioSenha)</td>
                        <td>@Html.DisplayFor(modelItem => item.usuarioEndereco)</td>
                        <td>@Html.DisplayFor(modelItem => item.usuarioCPF)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.usuarioId" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.usuarioId" class="btn btn-sm btn-info">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.usuarioId" class="btn btn-sm btn-danger">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .rounded-circle {
        object-fit: cover;
        width: 40px;
        height: 40px;
    }

    .btn-group .btn {
        margin-right: 5px;
    }

    .container {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>


